{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true, // any 비허용
    "strictNullChecks": true, // null 또는 undefined 값이 포함된 변수에 대한 엄격한 검사를 활성화
    "esModuleInterop": true // CommonJS 모듈 형식과 ECMAScript 모듈 형식 간의 상호 운용성을 개선
  }
}
